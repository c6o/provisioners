{
  "name": "provisioners-root",
  "private": true,
  "workspaces": [
    "packages/istio/",
    "packages/etcd-operator/",
    "packages/c6o-system/",
    "packages/rabbitmq/",
    "packages/vscode/",
    "packages/common/",
    "packages/etcd/",
    "packages/mongo/",
    "packages/mattermost/",
    "packages/ghost/",
    "packages/kafka/",
    "packages/node-red/",
    "packages/grafana/",
    "packages/cert-manager/",
    "packages/prometheus/",
    "packages/verdaccio/",
    "packages/logging-elk/",
    "packages/precog/"
  ],
  "scripts": {
    "clean": "del packages/**/lib && del packages/**/node_modules && del packages/**/tsconfig.tsbuildinfo && lerna clean -y && lerna run clean && del ./node_modules",

    "build": "lerna run build --stream",
    "develop": "lerna run develop --parallel --stream",
    "reset": "yarn run clean && yarn run clean && rm -rf node_modules && yarn install && yarn run build",
    "release": "lerna version",
    "publish": "git checkout main && git merge --no-ff"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "del-cli": "^3.0.1",
    "lerna": "^3.20.2",
    "source-map-support": "^0.5.16",
    "typescript": "^3.9.5"
  }
}