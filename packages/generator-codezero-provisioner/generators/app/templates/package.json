{
  "name": "<%= provisionerPackageName %>",
  "version": "1.0.0",
  "description": "CodeZero provisioner for <%= applicationName %>",
  "main": "lib/index.js",
  "scripts": {
    "bundle": "<%= npxCmd %> parcel build ./src/ui/index.ts --no-cache --out-dir ./lib/ui",
    "build": "<%= npxCmd %> tsc -b && <%= npxCmd %> bundle",
    "provision": "<%= npxCmd %> build && czctl provision app.yaml --package ./",
    "develop": "<%= npxCmd %> -b -w --preserveWatchOutput",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "files": [
    "lib",
    "k8s"
  ],
  "keywords": [
    "codezero",
    "provisioner",
    "<%= applicationName %>"
  ]
}
