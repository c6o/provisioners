// Extends is not supported at this time by parcel-cli
{
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib",
        "rootDir": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2018",
        "sourceMap": true,
        "lib": ["es2018", "dom"],
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}